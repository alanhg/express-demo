<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>WebShell IDE</title>
    <style>

        .hide {
            opacity: 0;
        }

        .loading-iframe {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            border: none;
            background-color: #1e1e1e;
        }

        .workspace-loader {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            border: none;
        }

        .workspace {
            z-index: 1;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
</head>
<body>
<!--<iframe src="https://wx.cloudstudio.net/ws/embeded" class="workspace-loader"></iframe>-->
<iframe src="https://cs-res-1258344699.file.myqcloud.com/cloudstudio/vscode/3e54a6f80cbf72e76cc91bb32178e6b3ede84e3f/release-standalone/out/vs/code/browser/workbench/loading.html"
        class="loading-iframe"></iframe>
<script>
  const ws = new WebSocket('ws://127.0.0.1:8000/ide/<%= proxyKey %>?<%= queryParams %>');
  let agentFrameEl, tempPassword;
  ws.addEventListener('open', () => {

  });
  let startingOutput = '';
  ws.addEventListener('message', ({data}) => {
    const options = JSON.parse(data);
    if (options.type === 'start-ide') {
      if (options.data.password) {
        tempPassword = options.data.password;
        return;
      }
      if (options.data.status === 'starting') {
        // 安装步骤
        startingOutput = `${startingOutput + options.data.message}`;
      } else if (options.data.status === 'done') {
        if (!startingOutput.match('init success')) {
          alert('启动失败');
        } else {
          const loadingEl = document.body.getElementsByClassName('loading-iframe')[0];
          agentFrameEl = document.createElement('iframe');
          agentFrameEl.src = "/tty/<%= proxyKey %>/?folder=<%= folder %>";
          agentFrameEl.host = "<%= host %>";
          agentFrameEl.username = "<%= username %>/";
          agentFrameEl.classList = 'workspace hide';
          loadingEl.parentNode.insertBefore(agentFrameEl, loadingEl);
          // console.time('加载编辑器耗时');
          let interval = setInterval(() => {
            let loginEl = agentFrameEl.contentWindow.document.body.querySelector('[class*="center-container"]'); // 登录页面
            let editor = agentFrameEl.contentWindow.document.body.querySelector('[class*="monaco-workbench"]'); //编辑器
            if (loginEl) {
              clearInterval(interval);
              let formEl = agentFrameEl.contentWindow.document.body.querySelector('[class*="login-form"]');
              // 自动填充密码，然后提交表单登录
              formEl.querySelector("[name='password']").value = tempPassword;
              loadingEl.classList.add('hide');
              agentFrameEl.classList.remove('hide');
/*              window.setTimeout(() => {
                formEl.submit();
              }, 1000);*/
              // console.timeEnd('加载编辑器耗时');
            } else if (editor) {
              clearInterval(interval);
              loadingEl.classList.add('hide');
              agentFrameEl.classList.remove('hide');
              // console.timeEnd('加载编辑器耗时');
            }
          }, 100);
        }
      }
    }
  });
</script>
</body>
</html>
